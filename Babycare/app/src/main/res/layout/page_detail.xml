                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:ems="15"
                android:gravity="center"
                android:visibility="gone"
                android:padding="5dp"
                android:text=""

                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    app:bsb_bubble_color="#f9ac27"
                    app:bsb_bubble_text_color="@color/white"
                    app:bsb_bubble_text_size="15dp"
                    app:bsb_max="100"
                    app:bsb_min="0"
                    app:bsb_progress="0"
                    app:bsb_second_track_color="#f9ac27"
                    app:bsb_second_track_size="5dp"
                    app:bsb_section_count="5"
                    app:bsb_section_text_position="bottom_sides"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_show_section_mark="true"
                    app:bsb_show_section_text="true"
                    app:bsb_show_thumb_text="true"
                    app:bsb_thumb_text_size="15dp"
                    app:bsb_track_color="@color/gray"

                    />

            <EditText
                android:id="@+id/text_quantity"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:gravity="center"

                android:padding="5dp"
                android:text="1"

                android:textSize="15dp"
                android:textStyle="bold"
                 android:visibility="gone"/>

            <EditText
                android:id="@+id/text_id"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:ems="15"
                android:gravity="center"

                android:padding="5dp"
                android:text=""

                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone"
                />





            <Button


                android:id="@+id/save"
                android:layout_width="150dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_calculator"
                android:fontFamily="@font/eakamai"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"

                />

                <Button




                    android:id="@+id/b_action_1"
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_calculator"
                    android:fontFamily="@font/eakamai"
                    android:text="home"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />




        </LinearLayout>
    </LinearLayout>


</LinearLayout>


</LinearLayout>