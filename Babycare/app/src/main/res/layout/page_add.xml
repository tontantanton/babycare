<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page_detail">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/eakamai"
            android:gravity="center"
            android:maxLines="1"
            android:text="เพิ่มเมนูในฐานข้อมูล"
            android:textColor="@color/lightqray"
            android:textSize="22dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_user_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:text="aaaaaaaaaaaaa"

                android:textColor="@color/black"
                android:visibility="gone" />


            <TextView
                android:id="@+id/t_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"

                android:text="t_date"

                android:textColor="@color/black"
              />

/////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="name:"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="name"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
///////////////////////////////////////////////////////

            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" calories: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_calories"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="calories"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////

            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" protein: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_protein"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="protein"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////

            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" vitaminA: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_vitamina"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="vitamina"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////
            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" vitaminC: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_vitaminc"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="vitaminc"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////
            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" vitaminB6: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_vitaminb6"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="vitaminB6"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////
            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" vitaminB12: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_vitaminb12"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="vitaminB12"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////
            /////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" calcium: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_calcium"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="calcium"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            ///////////////////////////////////////////////////////
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" iodine: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_iodine"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="iodine"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text=" iron: "
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/ed_iron"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="iron"
                    android:textColor="@color/black"
                    />


            </LinearLayout>

            <Button
                android:id="@+id/b_action_1"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_calculator"
                android:drawableLeft="@drawable/result"
                android:fontFamily="@font/eakamai"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="เพิ่มเมนูในฐานข้อมูล"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>