<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"

        >
    </ImageView>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="txtID"
                android:textColor="@android:color/black"
android:visibility="gone"
                />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:fontFamily="@font/thsarabun"

                android:text="text_name"/>


            <TextView
                android:id="@+id/text_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_calories"

                android:textColor="@android:color/black"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/text_protein"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_protein"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_vitamina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_vitamina"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_vitaminc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_vitaminc"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_vitaminb6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_vitaminb6"
                android:visibility="gone"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/text_vitaminb12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_vitaminb12"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_calcium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_calcium"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_iodine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_iodine"
                android:visibility="gone"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/text_iron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="15sp"
                android:text="text_iron"
                android:visibility="gone"
                android:textColor="@android:color/black"/>
        </LinearLayout>





    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to recipes"
        android:focusable="false"
        android:focusableInTouchMode="false"
       android:visibility="gone"
        />

</LinearLayout>