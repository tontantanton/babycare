<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Page_detail">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">


        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/eakamai"
            android:gravity="center"
            android:maxLines="1"
            android:text="กราฟสารอาหาร"
            android:textColor="@color/lightqray"
            android:textSize="22dp"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TextView
            android:id="@+id/text_user_id"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:text="aaaaaaaaaaaaa"

            android:textColor="@color/black"
android:visibility="gone"
            />


        <TextView
            android:id="@+id/txtsumcal"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:text="aaaaaaaaaaaaa"
            android:fontFamily="@font/eakamai"
            android:textColor="@color/black"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:text="aaaaaaaaaaaaa"

            android:textColor="@color/black"

            />

        <TextView

            android:id="@+id/text_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_calcium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_iodine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_iron"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_vitamina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_vitaminb6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_vitaminb12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <TextView

            android:id="@+id/text_vitaminc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="text"
            android:visibility="gone"
            />

        <Button


            android:id="@+id/gotoNext1"
            android:fontFamily="@font/eakamai"
            android:layout_width="150dp"
            android:layout_height="31dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_calculator"

            android:text="next"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"


            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>